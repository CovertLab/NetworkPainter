\setbeamercovered{transparent=0}

\setlength{\TPHorizModule}{1cm}
\setlength{\TPVertModule}{\TPHorizModule}
\textblockorigin{.1cm}{9.0cm}

%source in bottom right
\newcommand{\sourcebr}[1]{
  \begin{textblock}{12.6}(0,-.4)
  \tiny
  \flushright{#1}
  \end{textblock}}

%source in bottom left
\newcommand{\sourcebl}[1]{
  \begin{textblock}{12.6}(0,0)
  \raggedright
  \tiny
  #1
  \end{textblock}}

%et al
\newcommand{\etal}{\textit{et al.}}


